<div class="container text-center">
    <div class="grid-2">
        <div class="box">
            <div class="product-image-large">
                <img src="<%=productData.filePath%>">
            </div>
        </div>
        <div class="box">
            <h3><%=productData?.title%></h3>
            <div class="striped">
                <div class="grid-2 p-xs">
                    <div>Terméknév</div>
                    <div><%=productData?.productName%></div>
                </div>
                <div class="grid-2 p-xs">
                    <div>Ár</div>
                    <div><%=productData?.price%> Ft.</div>
                </div>
                <div class="grid-2 p-xs">
                    <div>Termék kategória</div>
                    <div><%=productData?.categoryName%></div>
                </div>
            </div>
            <div class=" bg-white p-xs" style="margin-top: 25px;">
                <%=productData?.productDesc%>
            </div>

            <form method="post" action="<%=baseUrl/add-to-cart%>"
            class="grid-2" style="margin-top: 25px;">
                <div>
                    <input type="number" value="1" name="quantity">
                    <input type="hidden" name="productID" value="<%=productData?.productID%>">
                    <input type="hidden" name="productName" value="<%=productData?.productName%>">
                    <input type="hidden" name="price" value="<%=productData?.price%>">
                </div>
                <div>
                    <button>Kosárba</button>
                </div>
            </form>

            <a href="<%=baseUrl%>/kosar">
                <button>Tovább a kosárra</button>
            </a>
        </div>
    </div>
</div>